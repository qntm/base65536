  "license": "MIT",
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.0",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.8.4",
    "base65536-test": "^1.1.2",
    "cross-env": "^7.0.3",
    "cypress": "^12.2.0",
    "express": "^4.17.1",
    "glob": "^8.0.1",
    "jest": "^29.0.1",
    "safe-code-point": "^3.0.0",
    "standard": "^17.0.0",
    "start-server-and-test": "^1.11.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
